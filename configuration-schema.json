{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "exports": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "path": { "type": "string" },
          "description": { "type": "string" },
          "title": { "type": "string" },
          "author": { "type": "string" }
        },
        "required": ["path"]
      }
    }
  },
  "required": ["exports"],
  "uniqueItems": true,
  "minItems": 1
}
